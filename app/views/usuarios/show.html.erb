<% provide(:title, @usuario.nombre) %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
	<%= gravatar_for @usuario %>
        <%= @usuario.nombre %> <%= @usuario.apellido %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @concursos.any? %>
      <h3>Concursos (<%= @concursos.count %>)</h3>
      <ol class="concursos">
        <%= render @concursos %>
      </ol>
    <% end %>
  </div>

</div>







